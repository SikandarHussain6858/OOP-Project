<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.EmailController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" spacing="10" prefHeight="60"
              style="-fx-background-color: #2c3e50;">
            <Label text="âœ‰ï¸ Send Notification"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <VBox spacing="12" alignment="CENTER"
                  maxWidth="600"
                  style="-fx-background-color: white; 
                         -fx-padding: 20; 
                         -fx-background-radius: 15; 
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                <GridPane vgap="12" hgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <TextField fx:id="toField" promptText="To *" 
                             GridPane.columnIndex="0" GridPane.rowIndex="0"
                             style="-fx-background-radius: 5;
                                    -fx-pref-height: 32;
                                    -fx-font-size: 13px;"/>

                    <TextField fx:id="ccField" promptText="CC" 
                             GridPane.columnIndex="0" GridPane.rowIndex="1"
                             style="-fx-background-radius: 5;
                                    -fx-pref-height: 32;
                                    -fx-font-size: 13px;"/>

                    <TextField fx:id="subjectField" promptText="Subject *" 
                             GridPane.columnIndex="0" GridPane.rowIndex="2"
                             style="-fx-background-radius: 5;
                                    -fx-pref-height: 32;
                                    -fx-font-size: 13px;"/>
                    
                    <TextArea fx:id="bodyField" promptText="Message *" 
                             prefRowCount="6" wrapText="true"
                             GridPane.columnIndex="0" GridPane.rowIndex="3"
                             style="-fx-background-radius: 5;
                                    -fx-font-size: 13px;"/>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT"
                          GridPane.columnIndex="0" GridPane.rowIndex="4">
                        <Button fx:id="attachButton" text="ðŸ“Ž Add Attachment"
                                style="-fx-background-color: #3498db;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 5;
                                       -fx-padding: 6 12;"/>
                        <CheckBox fx:id="htmlCheckBox" text="HTML Format"
                                 style="-fx-font-size: 13px;"/>
                    </HBox>
                    
                    <ListView fx:id="attachmentList" prefHeight="60"
                             GridPane.columnIndex="0" GridPane.rowIndex="5"
                             style="-fx-background-radius: 5;
                                    -fx-background-color: #f8f9fa;"/>
                    
                    <HBox spacing="15" alignment="CENTER_RIGHT" 
                          GridPane.columnIndex="0" GridPane.rowIndex="6">
                        <Button text="Clear" onAction="#handleClear"
                                style="-fx-background-color: #e74c3c;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 5;
                                       -fx-padding: 6 15;"/>
                        <Button fx:id="sendButton" text="Send âž¤" 
                                onAction="#handleSendEmail"
                                style="-fx-background-color: #2ecc71;
                                       -fx-text-fill: white;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 5;
                                       -fx-padding: 6 20;"/>
                        <ProgressIndicator fx:id="progressIndicator"
                                         prefHeight="18" prefWidth="18"/>
                    </HBox>
                </GridPane>

                <Label fx:id="emailStatusLabel" wrapText="true"
                       style="-fx-font-size: 13px;
                              -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
