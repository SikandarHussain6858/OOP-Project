<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.EmailController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" spacing="10" prefHeight="80"
              style="-fx-background-color: #2c3e50;">
            <Label text="✉️ Send Notification"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- Card-style form container -->
            <VBox alignment="CENTER" spacing="12"
                  style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                  maxWidth="400">

                <Label text="Send Email Notification"
                       style="-fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

                <TextField fx:id="toField" promptText="To (e.g. user@example.com)" prefWidth="300"
                           style="-fx-background-radius: 8;" />

                <TextArea fx:id="bodyField" promptText="Write your message..." prefWidth="300" prefHeight="150"
                          style="-fx-background-radius: 8;" wrapText="true" />

                <Button text="Send Email" onAction="#handleSendEmail" prefWidth="300"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

                <Label fx:id="emailStatusLabel" textFill="green" style="-fx-font-size: 12px;" />

            </VBox>
        </VBox>
    </center>

</BorderPane>
