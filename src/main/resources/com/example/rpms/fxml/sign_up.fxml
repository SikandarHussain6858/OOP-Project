<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.rpms.controller.SignUpController"
            prefWidth="600.0" prefHeight="750.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER" spacing="10.0" prefHeight="80"
              style="-fx-background-color: #2c3e50;">
            <Label text="ðŸ“ Create New Account"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Sign Up Form -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Optional icon -->
            <ImageView fitHeight="70" fitWidth="70">
                <image>
                    <Image url="@images/hospital.png"/>
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                <TextField fx:id="usernameField" promptText="Username" prefWidth="250"
                           style="-fx-background-radius: 8;" />

                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"
                               style="-fx-background-radius: 8;" />

                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="250"
                               style="-fx-background-radius: 8;" />

                <TextField fx:id="emailField" promptText="Email" prefWidth="250"
                           style="-fx-background-radius: 8;" />

                <ComboBox fx:id="roleComboBox" prefWidth="250" promptText="Select Role"
                          style="-fx-background-radius: 8;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Admin"/>
                            <String fx:value="Doctor"/>
                            <String fx:value="Patient"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Doctor Fields -->
                <VBox fx:id="doctorFields" visible="false" managed="false" spacing="10">
                    <TextField fx:id="specializationField" promptText="Specialization"/>
                    <TextField fx:id="doctorPhoneField" promptText="Phone Number"/>
                    <ComboBox fx:id="doctorGenderComboBox" promptText="Gender">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Male"/>
                                <String fx:value="Female"/>
                                <String fx:value="Other"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <DatePicker fx:id="doctorDobPicker" promptText="Date of Birth"/>
                    <TextArea fx:id="doctorAddressArea" promptText="Address"/>
                    <TextField fx:id="qualificationField" promptText="Qualification"/>
                    <TextField fx:id="experienceField" promptText="Years of Experience"/>
                    <TextField fx:id="timeSlotField" promptText="Available Time Slot"/>
                    <TextField fx:id="availableDaysField" promptText="Available Days (comma separated)"/>
                </VBox>

                <!-- Patient Fields -->
                <VBox fx:id="patientFields" visible="false" managed="false" spacing="10">
                    <TextField fx:id="nameField" promptText="Full Name"/>
                    <TextField fx:id="phoneField" promptText="Phone Number"/>
                    <ComboBox fx:id="genderComboBox" promptText="Gender">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Male"/>
                                <String fx:value="Female"/>
                                <String fx:value="Other"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <DatePicker fx:id="dobPicker" promptText="Date of Birth"/>
                    <TextArea fx:id="addressArea" promptText="Address"/>
                    <TextField fx:id="emergencyContactField" promptText="Emergency Contact"/>
                    <TextArea fx:id="medicalHistoryArea" promptText="Medical History"/>
                    <TextField fx:id="allergiesField" promptText="Known Allergies"/>
                    <ComboBox fx:id="patientTypeComboBox" promptText="Patient Type">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="In-Patient"/>
                                <String fx:value="Out-Patient"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <!-- Admin Fields -->
                <VBox fx:id="adminFields" visible="false" managed="false" spacing="10">
                    <TextField fx:id="adminPhoneField" promptText="Phone Number"/>
                    <TextField fx:id="adminDepartmentField" promptText="Department"/>
                    <TextField fx:id="adminRoleDescriptionField" promptText="Role Description"/>
                </VBox>

                <Button text="Sign Up" onAction="#handleSignUp" prefWidth="250"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

                <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12px;" visible="false" />

                <Label text="Already have an account? Login"
                       onMouseClicked="#goToLogin"
                       style="-fx-text-fill: #3498db; -fx-underline: true; -fx-cursor: hand;" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
