<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.rpms.controller.EmergencyAlertController"
            prefWidth="800" prefHeight="600">
    
    <children>
        <VBox layoutX="20" layoutY="20" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <Label text="Emergency Alert Center" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <VBox spacing="10">
                <Label text="Submit New Emergency Alert" />
                <ComboBox fx:id="alertTypeComboBox" promptText="Select Alert Type"/>
                <TextArea fx:id="messageArea" promptText="Describe your emergency..." prefRowCount="3"/>
                <Button text="Submit Alert" onAction="#handleSubmitAlert"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Your Alert History" />
                <TableView fx:id="alertsTable">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="typeColumn" text="Type"/>
                        <TableColumn fx:id="messageColumn" text="Message"/>
                        <TableColumn fx:id="statusColumn" text="Status"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
