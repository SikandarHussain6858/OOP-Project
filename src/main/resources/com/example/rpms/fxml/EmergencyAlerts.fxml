<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.rpms.controller.EmergencyAlertController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12;">

    <Label text="ðŸš¨ Emergency Alert"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #c0392b;" />

    <TextField fx:id="emailField" promptText="Enter recipient email"
               prefWidth="300" style="-fx-font-size: 14px;" />

    <TextArea fx:id="descriptionArea" promptText="Describe the emergency..."
              prefHeight="150" wrapText="true" style="-fx-font-size: 14px;" />

    <Button text="Send Alert"
            onAction="#handleSendAlert"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

    <Label fx:id="statusLabel" text=""
           style="-fx-text-fill: #2c3e50; -fx-font-size: 12px;" />
</VBox>
