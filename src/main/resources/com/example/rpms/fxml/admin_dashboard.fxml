<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.rpms.controller.AdminDashboardController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <!-- Header -->    <HBox layoutX="0" layoutY="0" prefHeight="70" prefWidth="800"
          alignment="CENTER_LEFT"
          style="-fx-background-color: #2c3e50; -fx-padding: 0 20 0 20;">
        <Label text="🛠 Admin Dashboard"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#handleLogout" prefHeight="30" prefWidth="80"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;" />
    </HBox>

    <!-- Sidebar -->
    <VBox layoutX="0" layoutY="70" prefWidth="200" prefHeight="530"
          spacing="12" alignment="TOP_CENTER"
          style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
        <Button text="➕ Add Patient" prefWidth="160" onAction="#handleAddPatient"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="👥 View Patients" prefWidth="160" onAction="#handleViewPatients"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="👨‍⚕️ Add Doctor" prefWidth="160" onAction="#handleAddDoctor"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="📋 View Doctors" prefWidth="160" onAction="#handleViewDoctors"
                style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="📅 Book Appointment" prefWidth="160" onAction="#handleBookAppointment"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="🗂 View Appointments" prefWidth="160" onAction="#handleViewAppointments"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="📧 Send Email" prefWidth="160" onAction="#handleSendEmail"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="🚨 Emergency Alerts" prefWidth="160" onAction="#handleEmergencyAlerts"
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="📊 System Reports" prefWidth="160" onAction="#handleSystemReports"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </VBox>

    <!-- Main Content Area -->
    <VBox fx:id="mainContent"
          layoutX="220" layoutY="90"
          prefWidth="560" prefHeight="480"
          spacing="12" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Welcome, Admin!" style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
        <Label text="Please select an action from the left panel."
               style="-fx-text-fill: #555555; -fx-font-size: 14px;" />
    </VBox>

</AnchorPane>
