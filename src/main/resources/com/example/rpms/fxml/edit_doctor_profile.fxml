<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.rpms.controller.EditDoctorProfileController"
      spacing="20" style="-fx-padding: 20;">
    
    <Label text="Edit Profile" 
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <!-- Edit Form -->
    <GridPane hgap="10" vgap="10">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

        <!-- Name -->
        <Label text="Name:" style="-fx-font-weight: bold;" 
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Email -->
        <Label text="Email:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Phone -->
        <Label text="Phone:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="phoneField"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Specialization -->
        <Label text="Specialization:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="specializationField"
                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!-- Qualification -->
        <Label text="Qualification:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="qualificationField"
                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <!-- Experience -->
        <Label text="Years of Experience:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="experienceField"
                  GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <!-- Address -->
        <Label text="Address:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextArea fx:id="addressField" prefRowCount="3" wrapText="true"
                  GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <!-- Remarks -->
        <Label text="Remarks:" style="-fx-font-weight: bold;"
               GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextArea fx:id="remarksField" prefRowCount="3" wrapText="true"
                  GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </GridPane>

    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c;"/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        <Button text="Save Changes" onAction="#handleSave"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>

</VBox>
