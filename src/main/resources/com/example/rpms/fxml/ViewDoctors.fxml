<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.example.rpms.controller.ViewDoctorsController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <top>
        <HBox alignment="CENTER" spacing="10" prefHeight="80"
              style="-fx-background-color: #2c3e50;">
            <Label text="ðŸ‘¨â€âš•ï¸ Registered Doctors"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <VBox spacing="15" alignment="CENTER"
                  maxWidth="800"
                  style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Refresh" onAction="#handleRefresh"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; 
                                   -fx-font-weight: bold; -fx-background-radius: 8;" />
                </HBox>

                <TableView fx:id="doctorTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="70"/>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                        <TableColumn fx:id="specialtyColumn" text="Specialty" prefWidth="150"/>
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
                        <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
                        <TableColumn fx:id="actionColumn" text="Action" prefWidth="100"/>
                    </columns>
                </TableView>

                <Label fx:id="statusLabel" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold;" 
                       wrapText="true" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
