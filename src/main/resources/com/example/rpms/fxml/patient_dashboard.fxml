<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.PatientDashboardController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <!-- Header -->
    <HBox layoutX="0" layoutY="0" prefHeight="70" prefWidth="800"
          alignment="CENTER_LEFT"
          style="-fx-background-color: #2c3e50; -fx-padding: 0 0 0 30;">
        <Label text="💙 Patient Dashboard"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#handleLogout" prefHeight="30" prefWidth="80"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;" />
    </HBox>

    <!-- Sidebar -->
    <VBox layoutX="20" layoutY="90" spacing="15" prefWidth="200"
          alignment="TOP_CENTER"
          style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 12;">
        <Button text="📤 Upload Vitals" prefWidth="180" onAction="#handleUploadVitals"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="📑 View Reports" prefWidth="180" onAction="#handleViewReports"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="💬 Doctor Feedback" prefWidth="180" onAction="#handleDoctorFeedback"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />        
        <Button text="🚨 Emergency Alert" prefWidth="180" onAction="#handleEmergencyAlert"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="📆 View Appointments" prefWidth="180" onAction="#handleViewAppointments"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="🗨️ Chat with Doctor" prefWidth="180" onAction="#handleChatWithDoctor"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="💊 My Prescriptions" prefWidth="180" onAction="#handleViewPrescriptions"
                style="-fx-background-color: #f1c40f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button text="🎥 Video Consultations" prefWidth="180" onAction="#handleVideoConsultations"
                style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </VBox>

    <!-- Main Content Area -->
    <VBox fx:id="mainContent"
          layoutX="240" layoutY="90"
          prefWidth="540" prefHeight="480"
          spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Welcome, Patient 🙋"
               style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
        <Label text="Please select an option from the left panel."
               style="-fx-font-size: 14px; -fx-text-fill: #555;" />
    </VBox>

</AnchorPane>
