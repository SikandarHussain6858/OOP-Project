<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.example.rpms.controller.PatientDashboardController">
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Patient Dashboard" 
                  style="-fx-text-fill: white; -fx-font-size: 20; -fx-padding: 10 0 20 0;"/>
            <Separator/>
            <Button text="My Profile" onAction="#handleViewProfile" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-min-width: 170;"/>
            <Button text="Upload Vitals" onAction="#handleUploadVitals"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-min-width: 170;"/>
            <Button text="Doctor Feedback" onAction="#handleDoctorFeedback"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-min-width: 170;"/>
            <Button text="Request Consultation" onAction="#handleBookAppointment"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-min-width: 170;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-alignment: CENTER_LEFT; -fx-min-width: 170;"/>
        </VBox>
    </left>
    
    <center>
        <VBox fx:id="mainContent" style="-fx-background-color: white; -fx-padding: 20;"/>
    </center>
</BorderPane>
