<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.example.rpms.controller.DoctorDashboardController">
    
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label fx:id="doctorNameLabel" style="-fx-text-fill: white;"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button text="View Patient Data" onAction="#handleViewPatientData"/>
            <Button text="Give Feedback" onAction="#handleGiveFeedback"/>
            <Button text="Schedule Appointments" onAction="#handleScheduleAppointments"/>
            <Button text="View History" onAction="#handleViewHistory"/>
            <Button text="Emergency Alerts" onAction="#handleEmergencyAlerts"/>
            <Button text="My Profile" onAction="#handleViewProfile"/>
        </VBox>
    </left>
    
    <center>
        <VBox fx:id="mainContent" style="-fx-padding: 20;">
            <Label text="Welcome, Doctor" style="-fx-font-size: 24;"/>
        </VBox>
    </center>
    
</BorderPane>
