<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.rpms.controller.DoctorEmergencyAlertController"
      spacing="20" style="-fx-padding: 20;">
    
    <Label text="Active Emergency Alerts" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>
    
    <!-- Active Alerts Table -->
    <TableView fx:id="alertsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="patientColumn" text="Patient" prefWidth="120"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
            <TableColumn fx:id="messageColumn" text="Message" prefWidth="300"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
        <placeholder>
            <Label text="No active emergency alerts"/>
        </placeholder>
    </TableView>
    
    <Label text="Right-click on an alert to mark it as resolved" 
           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
</VBox>
