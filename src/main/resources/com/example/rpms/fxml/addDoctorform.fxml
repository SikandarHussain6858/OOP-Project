<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.AddDoctorController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <top>
        <HBox alignment="CENTER" spacing="10" prefHeight="80"
              style="-fx-background-color: #2c3e50;">
            <Label text="ðŸ‘¨â€âš•ï¸ Add Doctor to Hospital System"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                  maxWidth="500">

                <Label text="Doctor Registration Form"
                       style="-fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

                <TextField fx:id="nameField" promptText="Full Name *" />
                <TextField fx:id="emailField" promptText="Email *" />
                <PasswordField fx:id="passwordField" promptText="Password *" />
                <TextField fx:id="specializationField" promptText="Specialization *" />
                <TextField fx:id="phoneNumberField" promptText="Phone Number *" />
                <ComboBox fx:id="genderComboBox" promptText="Select Gender *">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Male"/>
                            <String fx:value="Female"/>
                            <String fx:value="Other"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <DatePicker fx:id="dobPicker" promptText="Date of Birth *" />
                <TextArea fx:id="addressArea" promptText="Address" prefRowCount="3" wrapText="true" />
                <TextField fx:id="qualificationField" promptText="Qualification *" />
                <TextField fx:id="experienceField" promptText="Years of Experience *" />
                <TextField fx:id="timeSlotField" promptText="Available Time Slot *" />

                <HBox spacing="10">
                    <CheckBox fx:id="monCheck" text="Mon" />
                    <CheckBox fx:id="tueCheck" text="Tue" />
                    <CheckBox fx:id="wedCheck" text="Wed" />
                    <CheckBox fx:id="thuCheck" text="Thu" />
                    <CheckBox fx:id="friCheck" text="Fri" />
                </HBox>

                <Button text="Add Doctor" onAction="#handleAddDoctor"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

                <Label fx:id="statusLabel" style="-fx-font-size: 12px;" textFill="green" />

            </VBox>
        </VBox>
    </center>

</BorderPane>
