<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.AddPatientController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <top>
        <HBox alignment="CENTER" spacing="10" prefHeight="80"
              style="-fx-background-color: #2c3e50;">
            <Label text="ðŸ§‘â€âš•ï¸ Add Patient to Hospital System"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" spacing="15"
                      style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      maxWidth="500">

                    <Label text="Patient Registration Form"
                           style="-fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

                    <!-- Basic Information -->
                    <TextField fx:id="nameField" promptText="Full Name *"
                             style="-fx-background-radius: 8;" />
                    <TextField fx:id="emailField" promptText="Email Address *"
                             style="-fx-background-radius: 8;" />
                    <PasswordField fx:id="passwordField" promptText="Password *"
                                 style="-fx-background-radius: 8;" />
                    <TextField fx:id="phoneField" promptText="Phone Number *"
                             style="-fx-background-radius: 8;" />

                    <!-- Personal Details -->
                    <ComboBox fx:id="genderComboBox" promptText="Select Gender *"
                             maxWidth="Infinity" style="-fx-background-radius: 8;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Male" />
                                <String fx:value="Female" />
                                <String fx:value="Other" />
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <DatePicker fx:id="dobPicker" promptText="Date of Birth *"
                              maxWidth="Infinity" style="-fx-background-radius: 8;" />

                    <TextArea fx:id="addressArea" promptText="Address *"
                            prefRowCount="2" wrapText="true"
                            style="-fx-background-radius: 8;" />

                    <!-- Medical Information -->
                    <TextArea fx:id="medicalHistoryArea" promptText="Medical History"
                            prefRowCount="3" wrapText="true"
                            style="-fx-background-radius: 8;" />

                    <!-- Submit Button -->
                    <Button text="Add Patient" onAction="#handleAddPatient"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; 
                                   -fx-font-weight: bold; -fx-background-radius: 8;"
                            maxWidth="Infinity">
                        <VBox.margin>
                            <Insets top="10" />
                        </VBox.margin>
                    </Button>

                    <!-- Status Label -->
                    <Label fx:id="statusLabel" wrapText="true"
                           style="-fx-font-size: 14px;" />

                    <!-- Required Fields Note -->
                    <Label text="* Required fields"
                           style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />

                </VBox>

                <padding>
                    <Insets bottom="20" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
