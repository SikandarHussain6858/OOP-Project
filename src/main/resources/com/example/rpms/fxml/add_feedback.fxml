<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml">
    <children>
        <Label text="Add Feedback" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TextArea fx:id="feedbackArea" promptText="Enter your feedback here..." prefRowCount="5" wrapText="true"/>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Submit" onAction="#handleSubmit" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>
    </children>
</VBox>
