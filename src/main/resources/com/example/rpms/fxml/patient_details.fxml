<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.PatientDetailsController"
            prefWidth="1000" prefHeight="800">

    <ScrollPane fitToWidth="true" fitToHeight="true"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                style="-fx-background-color: transparent;">
        
        <VBox spacing="20" style="-fx-padding: 20;" fillWidth="true" prefWidth="Infinity">

            <!-- Patient Info Section -->
            <VBox spacing="8" VBox.vgrow="NEVER">
                <Label text="ðŸ§‘ Patient Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Text fx:id="patientInfoText" style="-fx-font-size: 14px;" text="Loading patient information..." wrappingWidth="900"/>
            </VBox>

            <!-- Latest Vitals Section -->
            <VBox spacing="8" VBox.vgrow="NEVER">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ðŸ«€ Latest Vital Signs" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefreshVitals"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </HBox>
                <GridPane fx:id="vitalsGrid" vgap="10" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
                    </columnConstraints>
                    <Text fx:id="vitalsText" style="-fx-font-size: 14px;" text="Loading vital signs..."/>
                </GridPane>
                <Label fx:id="lastUpdatedLabel" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Emergency Alerts Section -->
            <VBox spacing="8" VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ðŸš¨ Recent Emergency Alerts" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefreshAlerts"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>
                <TableView fx:id="alertsTable" VBox.vgrow="ALWAYS" minHeight="150">
                    <columns>
                        <TableColumn fx:id="alertDateColumn" text="Date"/>
                        <TableColumn fx:id="alertTypeColumn" text="Type"/>
                        <TableColumn fx:id="alertMessageColumn" text="Message"/>
                        <TableColumn fx:id="alertStatusColumn" text="Status"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Feedback History Section -->
            <VBox spacing="8" VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ðŸ’¬ Feedback History" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Button text="ðŸ”„ Refresh" onAction="#handleRefreshFeedback"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="âž• Add Feedback" onAction="#handleAddFeedback"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                </HBox>
                <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS" minHeight="150">
                    <columns>
                        <TableColumn fx:id="feedbackDateColumn" text="Date"/>
                        <TableColumn fx:id="doctorNameColumn" text="Doctor"/>
                        <TableColumn fx:id="feedbackTextColumn" text="Feedback"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </ScrollPane>
</AnchorPane>
