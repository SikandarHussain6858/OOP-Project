            </HBox>
            <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS" minHeight="200">
                <columns>
                    <TableColumn fx:id="feedbackDateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="doctorNameColumn" text="Doctor" prefWidth="150"/>
                    <TableColumn fx:id="feedbackTextColumn" text="Feedback" prefWidth="300"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </children>
    </VBox>
</ScrollPane>
