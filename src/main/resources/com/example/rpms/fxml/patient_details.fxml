<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns:fx="http://javafx.com/fxml" 
            style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
    <VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
        <children>
        <!-- Patient Info Section -->
        <VBox spacing="8">
            <Label text="ðŸ§‘ Patient Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Text fx:id="patientInfoText" style="-fx-font-size: 14px;" text="Loading patient information..."/>
        </VBox>

        <!-- Latest Vitals Section -->
        <VBox spacing="8">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ«€ Latest Vital Signs" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefreshVitals" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            </HBox>
            <GridPane fx:id="vitalsGrid" vgap="10" hgap="20">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
                </columnConstraints>
                <Text fx:id="vitalsText" style="-fx-font-size: 14px;" text="Loading vital signs..."/>
            </GridPane>
            <Label fx:id="lastUpdatedLabel" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </VBox>

        <!-- Emergency Alerts Section -->
        <VBox spacing="8">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸš¨ Recent Emergency Alerts" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefreshAlerts" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
            <TableView fx:id="alertsTable" VBox.vgrow="ALWAYS" minHeight="200">
                <columns>
                    <TableColumn fx:id="alertDateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="alertTypeColumn" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="alertMessageColumn" text="Message" prefWidth="300"/>
                    <TableColumn fx:id="alertStatusColumn" text="Status" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- Feedback History Section -->
        <VBox spacing="8">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ’¬ Feedback History" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefreshFeedback" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
