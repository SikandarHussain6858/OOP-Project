<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.ViewReportController"
            prefWidth="750" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #ffffff); -fx-font-family: 'Segoe UI';">

    <top>
        <HBox alignment="CENTER" spacing="10.0" prefHeight="70"
              style="-fx-background-color: #2c3e50;">
            <Label text="ðŸ“„ Patient Report"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" BorderPane.alignment="CENTER"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);">
            <VBox.margin>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </VBox.margin>

            <!-- Patient Info -->
            <VBox spacing="8">
                <Label text="ðŸ‘¤ Patient Information"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />
