<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.RemoveDoctorDashboardController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #fdfbfb, #ebedee); -fx-font-family: 'Segoe UI';">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" spacing="10" prefHeight="80"
              style="-fx-background-color: #c0392b;">
            <Label text="ðŸ—‘ï¸ Remove Doctor"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Form -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="12"
                  style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                  maxWidth="320">

                <Label text="Enter Doctor Details to Remove"
                       style="-fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

                <TextField fx:id="idField" promptText="Doctor ID" prefWidth="220"
                           style="-fx-background-radius: 8;" />

                <TextField fx:id="nameField" promptText="Doctor Name" prefWidth="220"
                           style="-fx-background-radius: 8;" />

                <TextField fx:id="emailField" promptText="Email" prefWidth="220"
                           style="-fx-background-radius: 8;" />

                <Button text="Remove Doctor" onAction="#handleRemoveDoctor" prefWidth="220"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

                <Label fx:id="statusLabel" style="-fx-font-size: 12px;" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
