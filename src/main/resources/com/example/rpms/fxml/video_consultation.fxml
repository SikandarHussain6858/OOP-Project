<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.rpms.controller.VideoConsultationController"
      spacing="15" style="-fx-padding: 20;">
    
    <Label text="Video Consultation" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Select Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="patientComboBox" promptText="Choose a patient" 
                  GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity"/>
        
        <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="consultationDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="timeSlotComboBox" promptText="Select time slot"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Duration:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="durationComboBox" promptText="Select duration"
                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Notes:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="notesArea" wrapText="true" prefRowCount="3"
                  promptText="Enter any notes or reason for consultation"
                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" HBox.hgrow="ALWAYS"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button fx:id="scheduleButton" text="Schedule and Send Link" onAction="#handleSchedule"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>
    
</VBox>
