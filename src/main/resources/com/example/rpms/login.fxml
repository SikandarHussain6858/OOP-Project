<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.rpms.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="250" layoutY="50" text="Login" style="-fx-font-size:24px;" />
        <TextField fx:id="usernameField" layoutX="200" layoutY="120" promptText="Username"/>
        <PasswordField fx:id="passwordField" layoutX="200" layoutY="170" promptText="Password"/>
        <Button fx:id="loginButton" layoutX="250" layoutY="230" text="Login" onAction="#handleLoginButtonAction"/>
    </children>
</AnchorPane>
